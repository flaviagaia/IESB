<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/idImagem"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/congresso"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:id="@+id/idDescricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="3dp"
        android:text="Descrição do Monumento"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/idHistoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idDescricao"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="9dp"
        android:text="História do Monumento"
        android:textSize="24sp" />
</RelativeLayout>